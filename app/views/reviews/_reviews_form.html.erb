<%= simple_form_for [therapist, review] do |f| %>
  <%= f.input :rating,
              label: "Deixe uma avaliação",
              collection: (1..5).to_a,
              placeholder: "Avalie...",
              input_html: {data: {controller: "star-rating"}, id: "star_rating" } %>

  <%= f.text_area :comment, placeholder: "Deixe um comentário..." %>
  <%= f.submit "Enviar", class: "btn btn-primary" %>
<% end %>
