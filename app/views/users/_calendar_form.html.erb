<%= simple_form_for @appointment do |f| %>
  <div class="row">
    <div class="col">
      <%= f.input :start_time, as: :string,
                  wrapper_html: { class: "mb-4" },
                  label: false,
                  input_html: { data: { controller: "flatpickr" } } %>
    </div>

    <div class="col">
      <%= f.input :end_time, as: :string,
                  wrapper_html: { class: "mb-4" },
                  label: false,
                  input_html: { data: { controller: "flatpickr" }, id: 'end_time' } %>
   </div>

    <div class="form-actions text-center">
    <%= f.button :submit, id: "marcar", class: "btn btn-sm btn-primary mt-3" %>
    </div>

  </div>
<% end %>
