<div class="container container-chat">
  <div class="row mt-3">
    <div class="col-5">
      <% if @chatrooms.present? %>
        <% @chatrooms.each do |chatroom| %>
          <div class="card-chat mb-3">
          <% if current_user.role == 'therapist' %>
            <%= link_to "#{chatroom.patient.name} #{chatroom.patient.surname}", chatroom_path(chatroom), class: "text-decoration-none" %>
          <% else %>
            <%= link_to "#{chatroom.therapist.name} #{chatroom.therapist.surname}", chatroom_path(chatroom), class: "text-decoration-none" %>
          <% end %>
          </div>
        <% end %>
      <% else %>
        <h2>Você ainda não participa de nenhuma conversa.</h2>
      <% end %>
    </div>
    <div class="col-sm-12 col-md-5 col-lg-6">
    <img src="messagespersonal.svg" alt="imagem de mensagens" class="w-100">
    </div>
  </div>
</div>
